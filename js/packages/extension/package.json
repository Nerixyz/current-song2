{
  "name": "extension",
  "version": "0.6.0",
  "private": true,
  "targets": {
    "dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "prod": {
      "sourceMap": false
    }
  },
  "scripts": {
    "start": "parcel src/manifest.json --host localhost --target dev",
    "parcel-build": "rimraf dist && parcel build src/manifest.json --target prod",
    "build": "npm run parcel-build && web-ext build -n extension.zip",
    "sign": "npm run parcel-build && web-ext sign -n extension.xpi",
    "release": "npm run sign",
    "test": "jest"
  },
  "dependencies": {
    "beaverjs": "^0.3.1",
    "lit": "^2.2.7"
  },
  "devDependencies": {
    "parcel": "^2.6.2",
    "@parcel/config-webextension": "^2.6.2",
    "web-ext": "^7.1.1",
    "dotenv": "^16.0.1",
    "@types/firefox-webext-browser": "94.0.1",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "@types/jest": "^28.1.6",
    "rimraf": "^3.0.2"
  }
}
